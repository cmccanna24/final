<!DOCTYPE html>
<html>
<head>
  <title>Record Collector</title>
  <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>

  <div class="container">
    <h1><%= link_to "Record Collector", "/" %>
      <% if session["user_id"].present? %>
        <small><%= link_to "My Collection", "/users/#{session[:user_id]}" %></small>
        <div class="pull-right">
        <small>&#9835 <%= User.find_by("id = #{session[:user_id]}").username %> &#9835</small>
        <small><%= link_to "Sign Out", '/logout' %></small>
        </div>
      <% else %>
          <div class="pull-right">
          <small><%= link_to "Sign Up", '/signup' %></small>
          <small><%= link_to "Sign In", '/login' %></small>
          </div>
      <% end %>
    </h1>

    <% if notice.present? %>
      <div class="alert alert-info"%>
        <%= notice %>
      </div>
    <% end %>

    <%= yield %>

  </div>

</body>
</html>
