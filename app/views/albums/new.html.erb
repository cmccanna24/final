<%= form_tag "/albums" do %>

  <div>
    <label for="title">Title:</label>
    <input size="80" name="title" id="title" placeholder="Example: Born In The U.S.A.">
  </div>

  <div>
    <label for="artist_id">Artist: </label>
    <select name="artist_id">
      <% @artists.each do |artist| %>
        <option value="<%= artist.id %>">
          <%= artist.name %>
        </option>
      <% end %>
    </select>
  </div>

  <div>
    <label for="year">Year:</label>
    <input size="4" name="year" id="year">
  </div>

  <div>
    <label for="poster_url">Link to Poster:</label>
    <input size="80" name="poster_url" id="poster_url" type="url">
  </div>

  <div>
    <label for="rating">Star Rating:</label>
    <input name="rating" value="5" type="number" min="1" max="5">
  </div>

  <input type="submit" name="commit" value="Add Album">

<% end %>





